# LINA - Line Analysis Assistant
# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Sports API Configuration
# Get your API key from: https://api-sports.io/
SPORTS_API_KEY=your_sports_api_key_here

# The Odds API Configuration  
# Get your API key from: https://the-odds-api.com/
ODDS_API_KEY=your_odds_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path (relative to project root)
DATABASE_PATH=./db/lina.db

# Database backup directory
DATABASE_BACKUP_PATH=./db/backups

# =============================================================================
# AI CONFIGURATION
# =============================================================================

# Ollama server configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# AI analysis timeout (milliseconds)
OLLAMA_TIMEOUT=30000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# API server port
API_PORT=3001

# Web application port  
WEB_PORT=3000